@import "prev.styl"

.tasks-today
  &__body
    display: flex
    flex-wrap wrap
    justify-content: center
    padding: 0 10px
    .task-prev
      margin 5px

  &__header
    display: flex
    flex-direction: column
    align-items: center
    color white
    margin-bottom: 20px

  &__title
    font-size: 25px
    margin-bottom: 10px

  &__description
    color rgba(white, .5)
    font-size: 14px
    text-transform uppercase