mixin footerNavItem(link, icon)
    li.footer-nav__item
        if(icon === 'clipboard')
            a(href=link).footer-nav__link.footer-nav__link--task
                +icon(icon,'footer-nav__icon')
        else
            a(href=link).footer-nav__link
                +icon(icon,'footer-nav__icon')

if(pageClass === 'home-page')
    include ../../modules/footer/home